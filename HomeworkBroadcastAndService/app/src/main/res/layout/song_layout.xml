<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:background="@color/colorSpotifyBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorSpotifyTitle"
        android:id="@+id/songTitle"
        android:textSize="22dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/taskThirdLayout"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSpotifySongInfo"
            android:text="Song information"
            android:id="@+id/songInformation"
            android:textSize="15dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>


</RelativeLayout>